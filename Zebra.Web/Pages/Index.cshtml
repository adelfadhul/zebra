@page "/"
@using Zebra.Core.Senders;
@inject NavigationManager NavigationManager
@inject WireSender WireSender
@using Microsoft.AspNetCore.Components
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <h1 class="display-4">Alraneem Zebra Printer</h1>
    <p>Please fill out the form below:</p>

    <form method="post" class="w-50">
        <div class="form-group mb-3">
            <label for="Name">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="form-group mb-3">
            <label for="CPR">CPR</label>
            <input type="text" id="CPR" name="CPR" class="form-control" value="@Model.CPR" required />
        </div>
        <div class="form-group mb-3">
            <label for="CPR">Doctor</label>
            <input type="text" id="Doctor" name="Doctor" class="form-control" value="@Model.Doctor" required />
        </div>
        <div class="form-group mb-4">
            <label for="Date">Date</label>
            <input type="date" id="Date" name="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


